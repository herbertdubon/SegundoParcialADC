//Codigo Arduino

int sensorMax = 0;
int sensorMin = 0;

void setup()
{
  Serial.begin(9600);

  sensorMax = analogRead(A0)/100;
  sensorMin = sensorMax;
}

void loop()
{
  
  int value = analogRead(A0)/100;
    
  if (value > sensorMax) sensorMax = value;
  if (value < sensorMin) sensorMin = value;

  
  // OUTPUT TO SERIAL
  Serial.print("\tMIN:\t");
  Serial.print(sensorMin);
  Serial.print("\tMAX:\t");
  Serial.print(sensorMax);
  Serial.print("\tACT:\t");
  Serial.println(value);
  delay (1000);
}

